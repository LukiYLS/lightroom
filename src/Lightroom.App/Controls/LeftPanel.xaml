<UserControl x:Class="Lightroom.App.Controls.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="300"
             Background="#252526">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Panel Header -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="10,8">
            <TextBlock Text="导航器" Foreground="White" FontWeight="SemiBold"/>
        </Border>
        
        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- Folders Section -->
                <TextBlock Text="文件夹" Foreground="#CCCCCC" FontSize="12" 
                           Margin="0,10,0,5" FontWeight="SemiBold"/>
                <TreeView x:Name="FoldersTree" 
                         Background="Transparent" 
                         BorderThickness="0"
                         Foreground="White">
                    <TreeViewItem Header="图片" IsExpanded="True">
                        <TreeViewItem Header="示例文件夹 1"/>
                        <TreeViewItem Header="示例文件夹 2"/>
                    </TreeViewItem>
                </TreeView>
                
                <!-- Collections Section -->
                <TextBlock Text="收藏夹" Foreground="#CCCCCC" FontSize="12" 
                           Margin="0,20,0,5" FontWeight="SemiBold"/>
                <ListBox x:Name="CollectionsList" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Foreground="White"
                        SelectionChanged="CollectionsList_SelectionChanged">
                    <ListBoxItem Content="快速收藏夹"/>
                    <ListBoxItem Content="我的收藏"/>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Bottom Info -->
        <Border Grid.Row="2" Background="#1E1E1E" Padding="10,5">
            <TextBlock x:Name="ImageCountText" 
                      Text="0 张照片" 
                      Foreground="#999999" 
                      FontSize="11"/>
        </Border>
    </Grid>
</UserControl>



