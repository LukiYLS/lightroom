<UserControl x:Class="Lightroom.App.Controls.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="350"
             Background="#252526">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Panel Header -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="10,8">
            <TextBlock Text="修改照片" Foreground="White" FontWeight="SemiBold"/>
        </Border>
        
        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                
                <!-- 基本调整 -->
                <Expander Header="基本" IsExpanded="True" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 曝光度 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="曝光度" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="ExposureValue" 
                                          Text="0.00" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="ExposureSlider" 
                                   Minimum="-5" Maximum="5" Value="0" 
                                   TickFrequency="0.1"
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 对比度 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="对比度" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="ContrastValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="ContrastSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 高光 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="高光" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="HighlightsValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="HighlightsSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 阴影 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="阴影" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="ShadowsValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="ShadowsSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 白色色阶 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="白色色阶" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="WhitesValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="WhitesSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 黑色色阶 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="黑色色阶" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="BlacksValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="BlacksSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 白平衡（仅对 RAW 有效） -->
                <Expander Header="白平衡" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 色温 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="色温" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="TemperatureValue" 
                                          Text="5500" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="TemperatureSlider" 
                                   Minimum="1500" Maximum="11500" Value="5500" 
                                   TickFrequency="100"
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 色调 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="色调" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="TintValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="TintSlider" 
                                   Minimum="-150" Maximum="150" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 颜色调整 -->
                <Expander Header="颜色" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 自然饱和度 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="自然饱和度" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="VibranceValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="VibranceSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 饱和度 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="饱和度" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="SaturationValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="SaturationSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 细节 -->
                <Expander Header="细节" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 锐化 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="锐化" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="SharpnessValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="SharpnessSlider" 
                                   Minimum="0" Maximum="150" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 降噪 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="降噪" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="NoiseReductionValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="NoiseReductionSlider" 
                                   Minimum="0" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 效果 -->
                <Expander Header="效果" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 晕影 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="晕影" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="VignetteValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="VignetteSlider" 
                                   Minimum="-100" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                        
                        <!-- 颗粒 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="颗粒" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="GrainValue" 
                                          Text="0" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="GrainSlider" 
                                   Minimum="0" Maximum="100" Value="0" 
                                   ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 滤镜 -->
                <Expander Header="滤镜" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <!-- 滤镜选择 -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="滤镜" Foreground="#CCCCCC" FontSize="12" Margin="0,0,0,8"/>
                            <ComboBox x:Name="FilterComboBox"
                                     Foreground="White"
                                     Padding="8,4"
                                     SelectionChanged="FilterComboBox_SelectionChanged">
                                <ComboBox.Style>
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <ToggleButton Name="ToggleButton"
                                                                      Grid.Column="2"
                                                                      Focusable="False"
                                                                      IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                                                      ClickMode="Press"
                                                                      Background="#2D2D30"
                                                                      BorderBrush="#3F3F46">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition/>
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter Name="ContentSite"
                                                                                  IsHitTestVisible="False"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="3,3,23,3"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"/>
                                                                <Path x:Name="Arrow"
                                                                      Grid.Column="1"
                                                                      Fill="White"
                                                                      HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"
                                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                            </Grid>
                                                        </ToggleButton>
                                                        <TextBox Name="PART_EditableTextBox"
                                                                 Style="{x:Null}"
                                                                 HorizontalAlignment="Left"
                                                                 VerticalAlignment="Center"
                                                                 Margin="3,3,23,3"
                                                                 Focusable="True"
                                                                 Background="Transparent"
                                                                 Visibility="Hidden"
                                                                 IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                        <Popup Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True"
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Grid Name="DropDown"
                                                                  SnapsToDevicePixels="True"
                                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                <Border x:Name="DropDownBorder"
                                                                        Background="#1E1E1E"
                                                                        BorderThickness="1"
                                                                        BorderBrush="#3F3F46"
                                                                        CornerRadius="2">
                                                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Grid>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEditable" Value="true">
                                                            <Setter Property="IsTabStop" Value="false"/>
                                                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="ItemContainerStyle">
                                            <Setter.Value>
                                                <Style TargetType="ComboBoxItem">
                                                    <Setter Property="Background" Value="#1E1E1E"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Padding" Value="8,4"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3F3F46"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#007ACC"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" Foreground="White"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 滤镜强度 -->
                        <StackPanel Margin="0,0,0,15">
                            <Grid>
                                <TextBlock Text="强度" Foreground="#CCCCCC" FontSize="12"/>
                                <TextBlock x:Name="FilterIntensityValue" 
                                          Text="100" 
                                          Foreground="#999999" 
                                          FontSize="11"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider x:Name="FilterIntensitySlider" 
                                   Minimum="0" Maximum="100" Value="100" 
                                   ValueChanged="FilterIntensitySlider_ValueChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Expander>
                
                <!-- 艺术效果 -->
                <Expander Header="艺术效果" IsExpanded="False" 
                         Foreground="White" 
                         Margin="0,0,0,10">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="艺术效果功能正在开发中..." 
                                  Foreground="#999999" 
                                  FontSize="11" 
                                  Margin="0,20"/>
                    </StackPanel>
                </Expander>
                
                <!-- Reset Button at Bottom -->
                <Button x:Name="ResetButtonBottom" 
                       Content="重置所有调整" 
                       HorizontalAlignment="Stretch"
                       Margin="0,20,0,0"
                       Padding="10,8"
                       Background="#3F3F46"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="ResetButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="4"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4F4F56"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#2F2F36"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
