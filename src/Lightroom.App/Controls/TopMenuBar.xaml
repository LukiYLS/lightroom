<UserControl x:Class="Lightroom.App.Controls.TopMenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="1200"
             Background="#2D2D30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Logo/Title -->
        <TextBlock Grid.Column="0" Text="Lightroom" 
                   FontSize="16" FontWeight="Bold" 
                   Foreground="White" 
                   VerticalAlignment="Center" 
                   Margin="15,0"/>
        
        <!-- Menu Items -->
        <Menu Grid.Column="1" Background="Transparent" 
              VerticalAlignment="Center" 
              Margin="20,0">
            <MenuItem Header="文件" Foreground="White">
                <MenuItem Header="导入照片..." Click="ImportPhotos_Click"/>
                <MenuItem Header="导出..." Click="Export_Click"/>
                <Separator/>
                <MenuItem Header="退出" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="编辑" Foreground="White">
                <MenuItem Header="首选项..." Click="Preferences_Click"/>
            </MenuItem>
            <MenuItem Header="视图" Foreground="White">
                <MenuItem Header="全屏" Click="FullScreen_Click"/>
                <MenuItem Header="第二显示器" Click="SecondDisplay_Click"/>
            </MenuItem>
            <MenuItem Header="帮助" Foreground="White">
                <MenuItem Header="关于" Click="About_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- Right side buttons -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" 
                    VerticalAlignment="Center" 
                    Margin="0,0,15,0">
            <Button Content="Library" Padding="10,5" 
                    Background="#0078D4" Foreground="White" 
                    BorderThickness="0" 
                    Click="LibraryMode_Click"
                    x:Name="LibraryButton"/>
            <Button Content="Develop" Padding="10,5" Margin="5,0,0,0"
                    Background="#0078D4" Foreground="White" 
                    BorderThickness="0" 
                    Click="DevelopMode_Click"
                    x:Name="DevelopButton"/>
        </StackPanel>
    </Grid>
</UserControl>



