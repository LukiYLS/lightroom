<UserControl x:Class="Lightroom.App.Controls.ImageEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="#1E1E1E">
    <Grid>
        <!-- Main Image Display Area -->
        <Border Background="#252525" Margin="0">
            <Grid>
                <!-- Placeholder Text -->
                <TextBlock x:Name="PlaceholderText"
                          Text="图片编辑区域 (GPU 渲染)" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Foreground="#555555" 
                          FontSize="20"/>
                
                <!-- D3DImage for DirectX 11 rendering -->
                <Image x:Name="D3DImageControl" 
                      Stretch="Fill" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"/>
                
                <!-- Overlay controls (zoom, pan, etc.) -->
                <Grid>
                    <!-- Histogram in top-right corner -->
                    <Border x:Name="HistogramBorder"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="10,10,10,0"
                           Width="200"
                           Height="120"
                           Background="#E0000000"
                           CornerRadius="4"
                           Padding="8"
                           BorderThickness="1"
                           BorderBrush="#40FFFFFF">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="直方图" 
                                      Foreground="#CCCCCC" 
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,5"
                                      Grid.Row="0"/>
                            <Canvas x:Name="HistogramCanvas"
                                   Grid.Row="1"
                                   VerticalAlignment="Stretch"
                                   HorizontalAlignment="Stretch"
                                   ClipToBounds="True"/>
                        </Grid>
                    </Border>
                    
                    <!-- Video controls (only visible when video is loaded) -->
                    <Border x:Name="VideoControlsBorder"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Bottom"
                           Margin="0,0,0,0"
                           Background="#E0000000"
                           Padding="15,10"
                           BorderThickness="0,1,0,0"
                           BorderBrush="#40FFFFFF"
                           Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Play/Pause Button -->
                            <Button x:Name="PlayPauseButton"
                                   Grid.Column="0"
                                   Width="40" Height="40"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   Cursor="Hand"
                                   Click="PlayPauseButton_Click"
                                   Margin="0,0,15,0">
                                <TextBlock x:Name="PlayPauseIcon"
                                          Text="▶"
                                          FontSize="20"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Button>
                            
                            <!-- Progress bar and time -->
                            <StackPanel Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Margin="0,0,15,0">
                                <!-- Progress bar -->
                                <Slider x:Name="VideoProgressSlider"
                                       Minimum="0"
                                       Maximum="100"
                                       Value="0"
                                       Height="20"
                                       Margin="0,0,0,5"
                                       Cursor="Hand"
                                       ValueChanged="VideoProgressSlider_ValueChanged"
                                       PreviewMouseDown="VideoProgressSlider_PreviewMouseDown"
                                       PreviewMouseUp="VideoProgressSlider_PreviewMouseUp"/>
                                
                                <!-- Time display -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="CurrentTimeText"
                                              Grid.Column="0"
                                              Text="00:00"
                                              Foreground="#CCCCCC"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                    <TextBlock x:Name="TotalTimeText"
                                              Grid.Column="1"
                                              Text="/ 00:00"
                                              Foreground="#888888"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Empty space for alignment -->
                            <Grid Grid.Column="2" Width="0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Zoom controls -->
                    <StackPanel HorizontalAlignment="Right" 
                               VerticalAlignment="Bottom" 
                               Margin="10"
                               Orientation="Vertical">
                        <Button Content="+" 
                               Width="30" Height="30" 
                               FontSize="18" FontWeight="Bold"
                               Background="#40000000" 
                               Foreground="White" 
                               BorderThickness="0"
                               Click="ZoomIn_Click"/>
                        <TextBlock x:Name="ZoomText" 
                                  Text="100%" 
                                  Foreground="White" 
                                  HorizontalAlignment="Center" 
                                  Margin="0,5"/>
                        <Button Content="-" 
                               Width="30" Height="30" 
                               FontSize="18" FontWeight="Bold"
                               Background="#40000000" 
                               Foreground="White" 
                               BorderThickness="0"
                               Click="ZoomOut_Click"/>
                        <Button Content="1:1" 
                               Width="30" Height="30" 
                               FontSize="10"
                               Background="#40000000" 
                               Foreground="White" 
                               BorderThickness="0"
                               Margin="0,5,0,0"
                               Click="ZoomFit_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>


