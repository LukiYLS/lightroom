<UserControl x:Class="Lightroom.App.Controls.FilmstripView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="1200"
             Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Separator -->
        <Border Grid.Row="0" Height="1" Background="#3F3F46"/>
        
        <!-- Thumbnail Strip -->
        <ScrollViewer Grid.Row="1" 
                     HorizontalScrollBarVisibility="Auto" 
                     VerticalScrollBarVisibility="Disabled"
                     Padding="10">
            <ItemsControl x:Name="ThumbnailsContainer">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="100" Height="100" 
                               Margin="5" 
                               Background="#252525"
                               BorderBrush="#3F3F46" 
                               BorderThickness="1"
                               Cursor="Hand"
                               MouseLeftButtonDown="Thumbnail_Click"
                               MouseEnter="Thumbnail_MouseEnter"
                               MouseLeave="Thumbnail_MouseLeave">
                            <Grid>
                                <!-- Thumbnail Image -->
                                <Image Stretch="UniformToFill"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Width="98" Height="98">
                                    <Image.Source>
                                        <Binding Path="Thumbnail"/>
                                    </Image.Source>
                                </Image>
                                
                                <!-- Video Indicator Overlay -->
                                <Border Background="#80000000" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Bottom"
                                       Height="20"
                                       Padding="2">
                                    <TextBlock Text="视频" 
                                              Foreground="#FFFFFF" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              FontSize="9"
                                              FontWeight="Bold">
                                        <TextBlock.Visibility>
                                            <Binding Path="IsVideo">
                                                <Binding.Converter>
                                                    <BooleanToVisibilityConverter/>
                                                </Binding.Converter>
                                            </Binding>
                                        </TextBlock.Visibility>
                                    </TextBlock>
                                </Border>
                                
                                <!-- Loading Indicator -->
                                <TextBlock Text="加载中..." 
                                          Foreground="#999999" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="10">
                                    <TextBlock.Visibility>
                                        <Binding Path="IsLoading">
                                            <Binding.Converter>
                                                <BooleanToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                                
                                <!-- Error Indicator -->
                                <TextBlock Text="错误" 
                                          Foreground="#FF4444" 
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          FontSize="10">
                                    <TextBlock.Visibility>
                                        <Binding Path="HasError">
                                            <Binding.Converter>
                                                <BooleanToVisibilityConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Visibility>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>



